<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".preferences">
    <TextView
            android:text="List Title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ListTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.078"
            app:layout_constraintHorizontal_bias="0.52"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="238dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/ListTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.095" app:layout_constraintVertical_bias="0.188"
            android:id="@+id/linearLayout2">
        <TextView
                android:text="Task 1"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/Task1"/>
        <TextView
                android:text="Task 2"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/Task2"/>
        <TextView
                android:text="Task 3"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/Task3"/>
        <TextView
                android:text="Task 4"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/Task4"/>
        <TextView
                android:text="Task 5"
                android:layout_width="match_parent"
                android:layout_height="35dp" android:id="@+id/Task5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="133dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.523" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/linearLayout3">
        <EditText
                android:text="%"
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content" android:id="@+id/Weight1"/>
        <EditText
                android:text="%"
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content" android:id="@+id/Weight2"/>
        <EditText
                android:text="%"
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content" android:id="@+id/Weight3"/>
        <EditText
                android:text="%"
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content" android:id="@+id/Weight4"/>
        <EditText
                android:text="%"
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:layout_height="wrap_content" android:id="@+id/Weight5"/>
    </LinearLayout>
    <Button
            android:text="Home"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Activity1"
            android:onClick="GoToMainActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.176"
            app:layout_constraintVertical_bias="0.744"/>
    <Button
            android:text="Set Tasks"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Preferences"
            android:onClick="GoToSecondaryActivity"
            app:layout_constraintTop_toTopOf="@+id/Activity1"
            app:layout_constraintBottom_toBottomOf="@+id/Activity1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.826"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Help"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Help"
            android:onClick="GoToHelpActivity"
            app:layout_constraintTop_toBottomOf="@+id/Activity1"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Task Name"
            android:layout_width="244dp"
            android:layout_height="28dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.446" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Set Weight"
            android:layout_width="130dp"
            android:layout_height="28dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.458" app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>