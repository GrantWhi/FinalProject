<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".help">

    <TextView
            android:text="HELP"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ListTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.078"
            app:layout_constraintHorizontal_bias="0.52"/>
    <Button
            android:text="Set Tasks"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Activity2"
            android:onClick="GoToSecondaryActivity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintVertical_bias="0.726"/>
    <Button
            android:text="Settings"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Preferences"
            android:onClick="GoToPreferencesActivity"
            app:layout_constraintTop_toTopOf="@+id/Activity2"
            app:layout_constraintBottom_toBottomOf="@+id/Activity2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.809"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Home"
            android:layout_width="128dp"
            android:layout_height="84dp" android:id="@+id/Help"
            android:onClick="GoToMainActivity"
            app:layout_constraintTop_toBottomOf="@+id/Preferences"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="In this application you will be able to create you very own list of tasks! In the home activity you will be able to name your list and also see your overall completion percentage. In the Set Tasks Activity, you will be able to set the names of the individual tasks on you list and mark them as complete. In the Settings activity, you will be able to set the weight that an individual taks has toward the overall completion of your list."
            android:layout_width="293dp"
            android:layout_height="237dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ListTitle" app:layout_constraintBottom_toTopOf="@+id/Activity2"/>

</androidx.constraintlayout.widget.ConstraintLayout>